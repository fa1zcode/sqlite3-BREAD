<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="/stylesheets/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <h1>To Do</h1>
    <div class="card">
      <form action="" method="get">
        <div class="card-header">
          <input type="hidden" name="page" value="1" />
          <h2>Pencarian</h2>
        </div>
        <div class="card-body">
          <div class="row">
            <label for="string" class="col-sm-2">String</label>
            <div class="col-sm-10">
              <input
                type="text"
                class="form-control"
                id="string"
                name="string"
                placeholder="String"
              />
            </div>
          </div>

          <div class="row">
            <label for="integer" class="col-sm-2">Integer</label>
            <div class="col-sm-10">
              <input
                type="number"
                class="form-control"
                id="integer"
                name="integer"
                placeholder="Integer"
              />
            </div>
          </div>

          <div class="row">
            <label for="float" class="col-sm-2">Float</label>
            <div class="col-sm-10">
              <input
                type="number"
                step="0.001"
                class="form-control"
                id="float"
                name="float"
                placeholder="Float"
              />
            </div>
          </div>

          <div class="row">
            <label for="date" class="col-sm-2">Date</label>
            <div class="col-sm-10">
              <input
                type="date"
                class="form-control"
                id="date"
                name="startDate"
              />
              <h2 style="font-size: medium; padding: inherit">To</h2>
              <input
                type="date"
                class="form-control"
                id="date"
                name="endDate"
              />
            </div>
          </div>

          <div class="row">
            <label for="boolean" class="col-sm-2">Boolean</label>
            <div class="col-sm-10">
              <select
                name="boolean"
                id=""
                class="form-select"
                aria-label="Default select example"
              >
                <option value="false">false</option>
                <option value="true">true</option>
              </select>
            </div>
          </div>
        </div>
        <div class="card-footer">
          <button type="submit" class="btn btn-success">Cari</button>
          <a href="/" class="btn btn-warning">Reset</a>
        </div>
      </form>
    </div>
    <table border="1" class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>String</th>
          <th>Integer</th>
          <th>Float</th>
          <th>Date</th>
          <th>Boolean</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach((item, index)=> { %>
        <tr>
          <td><%= item.id %></td>
          <td><%= item.string %></td>
          <td><%= item.integer%></td>
          <td><%= item.float%></td>
          <td><%= item.date ? item.date : 'kosong' %></td>
          <td><%= item.boolean ? 'true' : 'false' %></td>
          <td>
            <a href="/edit/<%= item.id%>" class="btn btn-success">Edit</a>
            <a href="/delete/<%= item.id%>" class="btn btn-danger">Delete</a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <nav aria-label="Page navigation example">
      <ul class="pagination">
        <li class="page-item <%= page == 1 ? 'disabled' : '' %>">
          <a
            class="page-link"
            href=" <%= url.replace(`page=${page}` , `page=${Number(page) - 1}`) %> "
            aria-label="Previous"
          >
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        <% for (let i=1; i<=jumlahHalaman; i++ ){ %>
        <li class="page-item <%= i == page ? 'active' : '' %>">
          <a
            class="page-link"
            href=" <%= url.replace(`page=${page}` , `page=${i}`) %> "
          >
            <%= i %>
          </a>
        </li>
        <% } %>
        <li class="page-item <%= page == jumlahHalaman ? 'disabled' : '' %>">
          <a
            class="page-link"
            href=" <%= url.replace(`page=${page}` , `page=${Number(page) + 1}`) %> "
            aria-label="Next"
          >
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
    <a href="/add" class="btn btn-primary">Tambah</a>
  </body>
</html>
